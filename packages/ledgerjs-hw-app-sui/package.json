{
	"name": "@semeano/ledgerjs-hw-app-sui",
	"version": "0.2.7",
	"description": "Ledger Hardware Wallet Sui Application API",
	"keywords": [
		"Ledger",
		"LedgerWallet",
		"LedgerSigner",
		"Sui",
		"NanoS",
		"Blue",
		"Hardware Wallet"
	],
	"author": "Pedro Semeano",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "github.com:semeano/ts-sdks"
	},
	"bugs": {
		"url": "https://github.com/semeano/ts-sdks/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/semeano/ts-sdks/tree/main/packages/ledgerjs-hw-app-sui#readme",
	"files": [
		"CHANGELOG.md",
		"dist",
		"src"
	],
	"type": "commonjs",
	"main": "./dist/cjs/Sui.js",
	"module": "./dist/esm/Sui.js",
	"types": "./dist/cjs/Sui.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/Sui.js",
			"require": "./dist/cjs/Sui.js"
		}
	},
	"size-limit": [
		{
			"path": "dist/Sui.js",
			"limit": "10 kB"
		}
	],
	"scripts": {
		"analyze": "size-limit",
		"clean": "rm -rf tsconfig.tsbuildinfo ./dist",
		"build": "build-package",
		"eslint:check": "eslint --max-warnings=0 .",
		"eslint:fix": "pnpm run eslint:check --fix",
		"lint": "pnpm run eslint:check && pnpm run prettier:check",
		"lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
		"prettier:check": "prettier -c --ignore-unknown .",
		"prettier:fix": "prettier -w --ignore-unknown .",
		"prettier:fix:watch": "onchange '**' -i -f add -f change -j 5 -- prettier -w --ignore-unknown {{file}}",
		"size": "size-limit",
		"test": "pnpm test:typecheck && pnpm test:unit",
		"test:typecheck": "tsc -p ./tests",
		"test:unit": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@ledgerhq/devices": "^8.6.1",
		"@ledgerhq/errors": "^6.26.0",
		"@ledgerhq/hw-bolos": "^6.32.8",
		"@ledgerhq/hw-transport": "^6.31.10",
		"@ledgerhq/ledger-cal-service": "^1.6.0",
		"@ledgerhq/ledger-trust-service": "^0.3.14",
		"fast-sha256": "^1.3.0",
		"semver": "^7"
	},
	"devDependencies": {
		"@ledgerhq/hw-transport-mocker": "^6.29.10",
		"@mysten/build-scripts": "workspace:*",
		"@size-limit/preset-small-lib": "^11.2.0",
		"@types/node": "^22.15.29",
		"@types/semver": "^7",
		"size-limit": "^11.2.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
